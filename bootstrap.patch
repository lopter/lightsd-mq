+    event_enable_debug_mode();
+#endif
+    lifxd_ev_base = event_base_new();
+}
+
+static void
+lifxd_usage(const char *progname)
+{
+    printf(
+        "Usage: %s [-m master_bulb_host] [-p master_bulb_port] "
+        "[-v debug|info|warning|error] [-f] [-h] [-V]\n",
+        progname
+    );
+    exit(0);
