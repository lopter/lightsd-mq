+{
+    if (lifxd_opts.verbosity <= LIFXD_INFO) {
+        va_list ap;
+        va_start(ap, fmt);
+        fprintf(stderr, "[INFO] lifxd: ");
+        vfprintf(stderr, fmt, ap);
+        va_end(ap);
+        fprintf(stderr, "\n");
+    }
+}
