+        return false;
+    }
+    gw->io = bufferevent_socket_new(lifxd_ev_base, -1, 0);
+    if (!gw->io) {
+        lifxd_warn("can't allocate a new gateway bulb");
+        goto bev_alloc_error;
+    }
+    gw->hostname = strdup(hostname);
+    if (!gw->hostname) {
+        lifxd_warn("can't allocate a new gateway bulb");
+        goto hostname_alloc_error;
+    }
+    gw->port = port;
+    bufferevent_setcb(
