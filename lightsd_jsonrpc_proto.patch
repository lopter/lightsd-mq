+static void
+lgtd_jsonrpc_check_and_call_set_light_from_hsbk(struct lgtd_client *client,
+                                                const struct lgtd_jsonrpc_request *request,
+                                                const char *json)
+{
+    struct lgtd_jsonrpc_set_brightness_args {
+        const jsmntok_t *target;
+        const jsmntok_t *h;
+        const jsmntok_t *s;
